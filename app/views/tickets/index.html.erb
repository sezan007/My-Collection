<h1 class="my-4">Tickets</h1>


<h1 class="mb-4">Your Tickets</h1>
<div class="container">
  <table class="table table-striped table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Summary</th>
        <th>Priority</th>
        <th>Status</th>
        <th>Link</th>
        <th>Jira Ticket</th>
      </tr>
    </thead>
    <tbody>
      <% @tickets.each do |ticket| %>
        <tr>
          <td><%= ticket.summary %></td>
          <td><%= ticket.priority %></td>
          <td><%= ticket.status %></td>
          <td><%= link_to 'View Page', ticket.link, class: "btn btn-primary btn-sm" %></td>
          <td><%= link_to 'View in Jira', "https://my-collection-course-project.atlassian.net/browse/#{ticket.jira_key}", class: "btn btn-secondary btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="mt-4">
    <%= pagy_bootstrap_nav(@pagy).html_safe %>
  </div>
</div>
